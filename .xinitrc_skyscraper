        #sc -r &
        if not args.keyev:
            try: 
                check_call([ 'synergy_skyscraper', 'startc' ],msg='starting synergy-client',loglevel=DEBUG)
            except CalledProcessError:
                warn('WARNING: synergy server startup returned non zero. exitcode="'+str(p.poll())+"'")
        else:
            try:
                p=Popen([ 'keyev' ],msg='starting keyev')
                popens.append(p)
