        ####################################################################


        try:
            environ.update({'DISPLAY':"skyscraper:0"})
            checksum_1=setup_keyboard('skyscraper:0')
            if not checksum_0 == checksum_1:
                warn('WARNING: "xkb" keyboard setup probably incorrect !')

        except CalledProcessError as e:
            ee=XinitError(e.msg)
            ee.log()
        
