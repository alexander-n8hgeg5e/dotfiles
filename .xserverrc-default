#!/bin/fish
echo xserverrc
echo DISPLAY=$DISPLAY
set cmdline "sudo nice -n-20 ionice -c2 -n0 chrt -rr 30 sudo -u $USER X :0 \
-verbose 0 \
-logverbose 0 \
-quiet \
-allowNonLocalXvidtune \
-ardelay 130 \
-ac \
-arinterval 125 \
-listen unix \
-listen inet \
-nolisten inet6 \
-depth 24 \
-fbbpp 32 \
-novtswitch \
vt7"

exec ssh -o controlmaster=no -o controlpersist=no tc $cmdline
